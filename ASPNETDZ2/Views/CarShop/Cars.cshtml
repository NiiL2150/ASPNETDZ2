@model List<Car>
@{
    ViewData["Title"] = "All car listings";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="card col col-12 col-md-6 col-lg-4 col-xl-3 p-1">
            <img class="card-img-top" src="@item.CarImage.ToImage()">
            <div class="card-body">
                <h5 class="card-title">@item.Title</h5>
                <p class="card-text">$@item.Price</p>
                <p class="card-text">@item.Description</p>
                <a href="@Url.Action("Car", "CarShop", new {id=item.Id})">View car</a>
            </div>
        </div>
    }
</div>
